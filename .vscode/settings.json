{
	// Go settings
	"go.lintTool": "golangci-lint",
	"go.lintFlags": [
		"--fast"
	],
	"go.lintOnSave": "package",
	"go.formatTool": "default",
	"go.useLanguageServer": true,
	"go.testOnSave": false,
	"go.coverOnSave": false,
	"go.testFlags": [
		"-v",
		"-race"
	],
	"go.diagnostic.vulncheck": "Off",
	"gopls": {
		"ui.semanticTokens": true,
		"formatting.gofumpt": false
	},
	// Editor settings for Go
	"[go]": {
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.organizeImports": "explicit"
		},
		"editor.defaultFormatter": "golang.go"
	},
	"editor.formatOnSave": true,
	"editor.rulers": [
		80,
		120
	],
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	// File associations
	"files.associations": {
		"*.proto": "proto3",
		"Makefile": "makefile",
		"Dockerfile": "dockerfile"
	},
	// File exclusions
	"files.exclude": {
		"**/.git": true,
		"**/bin": true,
		"**/coverage.out": true
	},
	// Proto3 settings
	"protoc": {
		"options": [
			"--proto_path=${workspaceRoot}/proto"
		]
	},
	// Markdown lint settings (uses .markdownlint.json)
	"markdownlint.config": {},
	// Spell checker settings
	"cSpell.words": [
		"otel",
		"grpc",
		"grpcui",
		"protobuf",
		"opentelemetry",
		"otlp",
		"zerolog",
		"godotenv",
		"golangci"
	],
	// Terminal settings
	"terminal.integrated.defaultProfile.linux": "zsh",
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.profiles.linux": {
		"zsh": {
			"path": "/usr/bin/zsh",
			"icon": "terminal"
		},
		"bash": {
			"path": "/bin/bash",
			"icon": "terminal-bash"
		}
	},
	"terminal.integrated.profiles.osx": {
		"zsh": {
			"path": "/bin/zsh",
			"icon": "terminal"
		}
	},
	// Search exclusions
	"search.exclude": {
		"**/bin": true,
		"**/proto/**/*.pb.go": true,
		"**/coverage.out": true
	}
}
